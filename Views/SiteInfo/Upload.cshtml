@model SMATMVC.Models.Report
@{
    ViewData["Title"] = "Upload SMAT Files";
}

<form method="post" enctype="multipart/form-data" asp-controller="SiteInfo" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
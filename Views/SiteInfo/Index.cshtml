@model IEnumerable<SMATMVC.Models.SiteInfo>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WebUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SiteUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SiteCollectionAdmins)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Owners)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastItemModifiedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProposedDisposition)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WebUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteCollectionAdmins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owners)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastItemModifiedDate.Value.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposedDisposition)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
